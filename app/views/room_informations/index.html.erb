<p id="notice"><%= notice %></p>

<h1>Listing Room Informations</h1>

<table>
  <thead>
    <tr>
      <th>Room type</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_informations.each do |room_information| %>
      <tr>
        <td><%= room_information.room_type %></td>
        <td><%= room_information.description %></td>
        <td><%= room_information.price %></td>
        <td><%= link_to 'Show', room_information %></td>
        <td><%= link_to 'Edit', edit_room_information_path(room_information) %></td>
        <td><%= link_to 'Destroy', room_information, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

